<Window x:Class="StationLog.ParameterSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StationLog"
        mc:Ignorable="d"
        Title="ParameterSettingWindow" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition MaxHeight="300"/>
			<RowDefinition Height="60"/>
			<RowDefinition Height="25"/>
		</Grid.RowDefinitions>
		<DataGrid>
			<DataGrid.Columns>
				<DataGridTextColumn Header="参数值"/>
				<DataGridTextColumn Header="参数名"/>
			</DataGrid.Columns>
		</DataGrid>
		<UniformGrid Rows="2" Columns="1" Grid.Row="1">
			<StackPanel Orientation="Horizontal">
				<Label Content="存取数据方式:" VerticalAlignment="Center"/>
				<CheckBox Content="文件"/>
				<CheckBox Content="数据库"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal" Margin="85,0,0,0">
				<CheckBox Content="仅用于查询"/>
				<CheckBox Content="设置连接数据库参数"/>
			</StackPanel>
		</UniformGrid>
		<StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
			<Button Content="确定"/>
			<Button Content="取消"/>
		</StackPanel>
	</Grid>
</Window>
